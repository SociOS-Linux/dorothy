#!/usr/bin/env bash
# thanks to http://unix.stackexchange.com/a/358209/50703 for the help on this one
set -e

id="$(rand)"
config="$(mktemp)"

echo "screen $1" >> "$config"

for arg in "${@:2}"; do
	{ echo 'split'; echo 'focus'; echo "screen $arg" ; } >> "$config"
done

screen -AS "$id" -c "$config"
