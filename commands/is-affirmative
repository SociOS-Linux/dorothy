#!/usr/bin/env bash
source "$BDIR/sources/strict.bash"

stance="${1-}"
desire="${2:?"USAGE: is-affirmative <input> <desire/default: yes/no>"}"

if is-either "$stance"  "Y" "y" "YES" "yes" "TRUE" "true"; then
	test "$desire" = "yes"
elif is-either "$stance" "N" "n" "NO" "no" "FALSE" "false"; then
	test "$desire" = "no"
else
	test "$desire" = "yes"
fi
