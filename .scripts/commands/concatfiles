#!/usr/bin/env bash
set -ueE -o pipefail

if test "$#" -eq 1; then
	outputFile="concat.$1"
	if is_file "$outputFile"; then
		rm "$outputFile"
	fi

	count=0
	findfiles "$1" | while read -r inputFile; do
		count=$((count + 1))
		echo -ne "\\r$count $inputFile"
		cat "$inputFile" >> "$outputFile"
	done
else
	echo "concatfiles <extension>"
fi
