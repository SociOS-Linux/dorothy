#!/usr/bin/env bash
set -e

# Download a file
# do not use the continue flags as they will prefer the local file over the remote file if the local exists

# https://github.com/aria2/aria2/issues/1137
# if command_exists aria2c; then
# 	if is_string "$2"; then
# 		aria2c --allow-overwrite=true --auto-file-renaming=false --out="$2" "$1"
# 	else
# 		aria2c --allow-overwrite=true --auto-file-renaming=false "$1"
# 	fi
# el

if command_exists wget; then
	if is_string "$2"; then
		wget -O "$2" -N "$1"
	else
		wget -N "$1"
	fi
elif command_exists curl; then
	if is_string "$2"; then
		curl -L "$1" -o "$2"
	else
		curl -OL "$1"
	fi
elif command_exists http; then
	if is_string "$2"; then
		http --output "$2" -d "$1"
	else
		http -d "$1"
	fi
fi