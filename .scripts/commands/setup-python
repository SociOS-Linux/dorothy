#!/usr/bin/env bash
source "$HOME/.scripts/sources/essentials.sh"
source "$HOME/.scripts/sources/strict.bash"

# Helper
function pipinstall {
	for ARG in "$@"; do
		pip install --upgrade "$ARG"
	done
}

echo -e '\nInstalling packages'
if test -n "$PYTHON_INSTALL"; then
	pipinstall pip "${PYTHON_INSTALL[@]}"
fi