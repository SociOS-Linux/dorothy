#!/usr/bin/env bash
source "$HOME/.scripts/sources/splitlines.bash"
source "$HOME/.scripts/sources/user.sh"
source "$HOME/.scripts/sources/strict.bash"

# Shell
lsh="${1:-}"

# Helpers
function vdel {
	if test "$lsh" = "fish"; then
		echo "set --erase $1;"
	else
		echo "export $1=\"\";"
	fi
}
function vadd {
	if test "$lsh" = "fish"; then
		echo "set --export --path --prepend $1 \"$2\";"
	else
		if test -z "${!1-}"; then
			echo "export $1=\"$2\";"
		else
			echo "export $1=\"$2:\$$1\";"
		fi
	fi
}
function vset {
	if test "$lsh" = "fish"; then
		echo "set --export $1 \"$2\";"
	else
		echo "export $1=\"$2\";"
	fi
}
# Reset
vdel PATH
vadd PATH "/bin"
if "$HOME/.scripts/commands/is-admin"; then
	vadd PATH "/sbin"
fi
vadd PATH "/usr/bin"
if "$HOME/.scripts/commands/is-admin"; then
	vadd PATH "/usr/sbin"
fi

# Xcode
if "$HOME/.scripts/commands/is-dir" "/Applications/Xcode.app/Contents/Developer/usr/bin"; then
	vadd PATH "/Applications/Xcode.app/Contents/Developer/usr/bin"
fi

# Others
if "$HOME/.scripts/commands/is-dir" "/usr/local/bin"; then
	vadd PATH "/usr/local/bin"
fi
if "$HOME/.scripts/commands/is-admin" && "$HOME/.scripts/commands/is-dir" "/usr/local/sbin"; then
	vadd PATH "/usr/local/sbin"
fi
if "$HOME/.scripts/commands/is-dir" "/usr/local/man"; then
	vadd MANPATH "/usr/local/man"
fi

# Homebrew core
if "$HOME/.scripts/commands/is-dir" "$HOME/.homebrew"; then
	vadd PATH "$HOME/.homebrew/bin"
	vadd MANPATH "$HOME/.homebrew/man"
fi

# Homebrew libs
if "$HOME/.scripts/commands/command-exists" brew; then
	export BREW_PREFIX; BREW_PREFIX="$(brew --prefix)"
	export BREW_CELLAR; BREW_CELLAR="$(brew --cellar)"

	# Heroku
	if "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/heroku/bin"; then
		vadd PATH "$BREW_PREFIX/heroku/bin"
	fi

	# Ruby & Gem
	if "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/opt/ruby/bin"; then
		vadd PATH "$BREW_PREFIX/opt/ruby/bin"
	fi
	rubydirs="$("$HOME/.scripts/commands/expand-path" "$HOME/.gem/ruby/*/bin")"
	for rubydir in $rubydirs; do
		vadd PATH "$rubydir"
	done

	# icu4c (dependency of heroku)
	if "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/opt/icu4c/bin"; then
		vadd PATH "$BREW_PREFIX/opt/icu4c/bin"
	fi
	if "$HOME/.scripts/commands/is-admin" && "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/opt/icu4c/sbin"; then
		vadd PATH "$BREW_PREFIX/opt/icu4c/sbin"
	fi

	# Sphinx (dependency of ruby)
	if "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/opt/sphinx-doc/bin"; then
		vadd PATH "$BREW_PREFIX/opt/sphinx-doc/bin"
	fi

	# GetText (dependency of gpg)
	if "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/opt/gettext/bin"; then
		vadd PATH "$BREW_PREFIX/opt/gettext/bin"
	fi

	# Python
	if "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/python/libexec/bin"; then
		vadd PATH "$BREW_PREFIX/python/libexec/bin"
	fi

	# Pip
	if "$HOME/.scripts/commands/is-dir" "$HOME/Library/Python/3.8/bin"; then
		vadd PATH "$HOME/Library/Python/3.8/bin"
	fi
	if "$HOME/.scripts/commands/is-dir" "$HOME/Library/Python/3.7/bin"; then
		vadd PATH "$HOME/Library/Python/3.7/bin"
	fi

	# SQLite (dependency of python)
	if "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/opt/sqlite/bin"; then
		vadd PATH "$BREW_PREFIX/opt/sqlite/bin"
	fi

	# OpenSSL (dependency of python, gpg, and node)
	if "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/opt/openssl/bin"; then
		vadd PATH "$BREW_PREFIX/opt/openssl/bin"
	fi

	# NSS
	if "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/opt/nss/bin"; then
		vadd PATH "$BREW_PREFIX/opt/nss/bin"
	fi

	# Anaconda
	if "$HOME/.scripts/commands/is-dir" "$BREW_PREFIX/anaconda3/bin"; then
		vadd PATH "$BREW_PREFIX/anaconda3/bin"
	fi
else
	# Ruby
	vset GEM_HOME "$HOME/.gem"
	for i in $(gem environment gempath | tr ":" "\n"); do
		vadd PATH "$i/bin"
	done
fi

# NVM
if "$HOME/.scripts/commands/is-dir" "$HOME/.nvm"; then
	vset NVM_DIR "$HOME/.nvm"
fi

# Go
if "$HOME/.scripts/commands/command-exists" go; then
	export GOROOT; GOROOT="$(go env GOROOT || "$HOME/.scripts/commands/first-path" "$BREW_CELLAR/go")"
	export GOPATH; GOPATH="$(go env GOPATH)"
	export GOBIN; GOBIN="$(go env GOBIN)"
	vset GOROOT "$GOROOT"
	vset GOPATH "$GOPATH"
	if "$HOME/.scripts/commands/is-empty-string" "$GOBIN"; then
		GOBIN="$GOPATH/bin"
		vset GOBIN "$GOPATH/bin"
	fi
	if "$HOME/.scripts/commands/is-dir" "$GOBIN"; then
		vadd PATH "$GOBIN"
	fi
	if "$HOME/.scripts/commands/is-dir" "$GOROOT/bin"; then
		vadd PATH "$GOROOT/bin"
	fi
fi

# Java
vadd CLASSPATH "."

# Clojurescript
if "$HOME/.scripts/commands/is-dir" "$HOME/.clojure/clojure-1.8"; then
	vadd PATH "$HOME/.clojure/clojure-1.8.0"
	vadd CLASSPATH "$HOME/.clojure/clojure-1.8.0"
fi

# Yarn
if "$HOME/.scripts/commands/command-exists" yarn; then
	vadd PATH "$(yarn global bin)"
fi

# Scripts
vadd PATH "$HOME/.scripts/commands"

# User
who="$(/usr/bin/whoami)"
if "$HOME/.scripts/commands/is-dir" "$HOME/.scripts/users/$who/commands"; then
	vadd PATH "$HOME/.scripts/users/$who/commands"
fi

# Local
if "$HOME/.scripts/commands/is-dir" "$HOME/.bin"; then
	vadd PATH "$HOME/.bin"
fi
if "$HOME/.scripts/commands/is-dir" "$HOME/bin"; then
	vadd PATH "$HOME/bin"
fi
