#!/usr/bin/env bash
source "$HOME/.scripts/sources/strict.bash"
source "$HOME/.scripts/sources/globstar.bash"
source "$HOME/.scripts/sources/nullglob.bash"

cd "$HOME/.scripts"

chmod +rwx ./**
chmod -x ./**/*.md ./sources/*.* ./users/**/*.*
chmod +x ./**/commands/* ./users/balupton/source.bash

rm-junk

git add -f ./**
git add -u

# prevent [git add -f ./*.sh] from adding [env.sh] if it exists
ok silent git rm -f -r --cached ./**/env/**
ok silent git rm -f --cached ./**/env.sh
