#!/usr/bin/env bash

# use globstar only if we need it
if "$BDIR/commands/is-globstar" "$*"; then
	source "$BDIR/sources/globstar.bash"
	# source "$BDIR/sources/nullglob.bash"
fi

function echolines {
	for arg in "$@"; do
		echo "$arg"
	done
}

# converts the intuitive
# expand-path '/Applications/Visual *'
# into the correct
# expand-path '/Applications/Visual\\ *'
for arg in "$@"; do
	eval echolines "${arg// /\\ }"
done
