#!/usr/bin/env bash -l
set -e

# Check
if ! command_exists gem; then
	echo -e '\nRuby (gem) does not seem to be installed...'
	exit
fi

# User
rm -Rf "$HOME/.gem"
if test -n "$GEM_HOME"; then
	rm -Rf "$GEM_HOME"
	mkdir -p "$GEM_HOME"
fi

# Helper
function geminstall {
	for ARG in "$@"; do
		echo "GEM INSTALL: $ARG"
		# we use --user-install because of:
		# https://github.com/ffi/ffi/issues/631
		gem install --user-install --no-ri --no-rdoc "$ARG"
		echo ''
	done
}

echo -e '\nUpdating ruby gems...'
gem update --system

echo -e '\nInstalling ruby gems...'
if test -n "$RUBY_INSTALL"; then
	geminstall "${RUBY_INSTALL[@]}"
fi
