{
  "css.validate": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line-thin",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "workbench.colorTheme": "Default Light+",
  "editor.fontSize": 13,
  // "workbench.fontAliasing": "antialiased",
  // these don't work on macOS Big Sur: Source Code Pro, Hasklig
  "editor.fontFamily": "IBM Plex Mono, Hack, Roboto Mono, FiraCode-Retina, Fira Code, Fira Mono, JetBrains Mono, Cascadia Code, Monoid-Retina, Monoid, IBM Plex Mono, Hack, Roboto Mono, Oxygen Mono, Monaco, PT Mono, Andale Mono, Menlo",
  "terminal.integrated.fontFamily": "IBM Plex Mono, Hasklig, Source Code Pro, IBM Plex Mono, Hack, Monaco, Fira Code, Fira Mono, PT Mono, Andale Mono, Menlo",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.insertSpaces": false,
  "editor.largeFileOptimizations": false,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": true,
  "editor.renderWhitespace": "all",
  "editor.roundedSelection": true,
  "editor.tabSize": 3,
  "editor.wordWrap": "on",
  "eslint.alwaysShowStatus": true,
  "eslint.enable": true,
  "eslint.run": "onType",
  "explorer.confirmDragAndDrop": false,
  "extensions.autoUpdate": true,
  "files.trimTrailingWhitespace": true,
  "git.alwaysSignOff": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.defaultCloneDirectory": "~/Projects/active",
  "git.enableCommitSigning": true,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "push",
  "git.scanRepositories": ["~/Projects"],
  "git.showPushSuccessNotification": true,
  "go.gopath": "~/go",
  "go.useLanguageServer": true,
  "html.format.enable": false,
  "javascript.format.enable": false,
  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.implicitProjectConfig.checkJs": true,
  "javascript.implicitProjectConfig.experimentalDecorators": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "json.format.enable": true,
  "lit-html.format.enabled": true,
  "python.linting.pylintPath": "/usr/local/bin/pylint",
  "terminal.integrated.fontWeightBold": "600",
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.shell.osx": "/usr/local/bin/fish",
  "typescript.format.enable": false,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.validate.enable": true,
  "window.autoDetectColorScheme": true,
  "window.closeWhenEmpty": true,
  "window.nativeTabs": true,
  "window.titleBarStyle": "native",
  "window.zoomLevel": 0,
  "workbench.editor.closeOnFileDelete": false,
  "workbench.editor.tabCloseButton": "left",
  "workbench.startupEditor": "none",
  "zenMode.fullScreen": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": false,
  "zenMode.restore": true,
  // "typescript.tsdk": "./node_modules/typescript/lib",
  "files.associations": {
    "*.lsrules": "json",
    "*.pine": "go"
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.next": true,
    "**/.svn": true,
    "**/.vscode": false,
    "**/database": true,
    "**/database.json": true,
    // "**/edition-*": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/pnp": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[plaintext,mdx]": {
    "editor.folding": false,
    "editor.fontFamily": "Ubuntu, Lato, Roboto, Spectral",
    "editor.insertSpaces": true,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "none",
    "editor.tabSize": 4
  },
  "eslint.options": {
    "ignorePattern": "**/*.d.ts"
  },
  "workbench.iconTheme": "material-icon-theme",
  "cSpell.userWords": ["Errlop", "allowlist", "bevry", "falsey", "vercel"]
  // "eslint.validate": [
  //   "javascript",
  //   "javascriptreact",
  //   "typescript",
  //   "typescriptreact"
  // ],
  // "editor.codeActionsOnSave": {
  //   "source.fixAll.eslint": true
  // },
  //   "markdownlint.config": {
  //     "MD007": {
  //       "indent": 4
  //     },
  //     "MD012": false,
  //     "MD022": false,
  //     "MD030": false,
  //     "MD032": false,
  //     "MD034": false
  //   },
}
