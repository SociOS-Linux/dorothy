#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# install
if is-brew; then
	brew install rustup
elif command-exists rustup; then
	rustup update
else
	curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
fi

# remove path modifications
# shellcheck disable=SC2016
replace-inside "$HOME/.profile" 'source "$HOME/.cargo/env"'
# shellcheck disable=SC2016
replace-inside "$HOME/.bash_profile" 'source "$HOME/.cargo/env"'
