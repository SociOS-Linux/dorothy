#!/usr/bin/env bash
set -e

name="$*"
basename="${name%.app}"
path="$HOME/Applications/$name"
if is_dir "$path"; then
	app="$path"
else
	path="/Applications/$name"
	if is_dir "$path"; then
		app="$path"
	fi
fi

if test -n "$app"; then
	echo "$app"
elif test "$basename" == "$name"; then
	getapp "$basename.app"
else
	stderr echo "couldn't find app: $basename"
	exit 1
fi