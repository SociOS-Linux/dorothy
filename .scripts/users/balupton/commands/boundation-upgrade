#!/usr/bin/env bash
source "$HOME/.scripts/sources/essentials.sh"
source "$HOME/.scripts/sources/extras.sh"
source "$HOME/.scripts/sources/strict.bash"

function get-node-engine {
	grep -A1 engines < package.json | grep node | head -n1 | xargs
}

# check for args
if [[ "$*" =~ "--auto" ]]; then
	auto="--auto"
else
	auto=''
fi
if [[ "$*" =~ "--lts" ]]; then
	lts="--lts"
else
	lts=''
fi

# engine: fetch original
eo="$(get-node-engine)"

# run boundation
nvm use system
boundation-authed "$auto" "$lts"

# engine: fetch new
en="$(get-node-engine)"

# engine: compare
if test "$en" = "$eo"; then
	change="minor"
	l=""
else
	change="major"
	l="-   Minimum required node version changed from \`${eo}\` to \`${en}\` to keep up with mandatory ecosystem changes
"
fi

# prettify history.md
npx prettier HISTORY.md --write

# update version
v="$(npm version "${change}" --git-tag-version=false)"
d="$(date +"%Y %B %-d")"
t="$(tail -n +3 HISTORY.md)"
echo "# History

## $v $d

-   Updated dependencies, [base files](https://github.com/bevry/base), and [editions](https://editions.bevry.me) using [boundation](https://github.com/bevry/boundation)
$l
$t" > HISTORY.md

# output
if test -z "$auto"; then
	less < HISTORY.md
fi

# prepare
npm i
secret env GITHUB_CLIENT_ID GITHUB_CLIENT_SECRET -- npm run our:release:prepare

# release
ok git rm -rf docs
git add .
git commit -am "$v - boundation, changelog, version bump"
npm owner add bevryme
secret env GITHUB_CLIENT_ID GITHUB_CLIENT_SECRET -- npm run our:release