#!/usr/bin/env bash
source "$HOME/.scripts/sources/essentials.sh"
set -e

# Check
if ! command-exists gem; then
	stderr echo -e '\nRuby (gem) does not seem to be installed...'
	exit
fi

# Clean gem home
rm -Rf "$HOME/.gem"
echo "CLEAR: $HOME/.gem"

# Clear GEM_HOME
if test -n "$GEM_HOME"; then
	echo "CLEAR: $GEM_HOME"
	rm -Rf "$GEM_HOME"
	mkdir -p "$GEM_HOME"
	unset GEM_HOME
fi

# Helper
function geminstall {
	for ARG in "$@"; do
		echo "GEM INSTALL: $ARG"
		# we use --user-install because of:
		# https://github.com/ffi/ffi/issues/631
		local name="${ARG% *}"
		local version="${ARG#* }"  # will be the same as name, if no version was provided
		gem uninstall "$name" -axI
		if test "$name" != "$version"; then
			gem install "$name" --version "$version" --user-install --no-ri --no-rdoc
		else
			gem install "$name" --user-install --no-ri --no-rdoc
		fi
		echo ''
	done
}

echo -e '\nUpdating ruby gems...'
gem update --system

# Workaround https://github.com/ffi/ffi/issues/631
geminstall "ffi 1.9.21"

echo -e '\nInstalling ruby gems...'
if test -n "$RUBY_INSTALL"; then
	geminstall "${RUBY_INSTALL[@]}"
fi

