#!/usr/bin/env bash
set -e

# Alias to Symlink
src=$(aliasverify "$1")
if is_empty_string "$src"; then
	echo "skipped $1"
else
	out=$(aliaspath "$1")

	if is_file "$out"; then
		ln -nfs "$out" "$src"
		echo "converted $1 -> $out"
	elif is_dir "$out"; then
		ln -nfs "$out" "$src"
		echo "converted $1 -> $out"
	else
		echo "missing $1 -> $out"
	fi
fi