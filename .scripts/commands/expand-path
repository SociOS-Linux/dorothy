#!/usr/bin/env bash
if is_latest_bash; then
	shopt -s nullglob globstar
fi

function echolines {
	for arg in "$@"; do
		echo "$arg"
	done
}

# converts the intuitive
# expandpath '/Applications/Visual *'
# into the correct
# expandpath '/Applications/Visual\\ *'
for arg in "$@"; do
	eval echolines "${arg/ /\\ }"
done
