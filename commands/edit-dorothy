#!/usr/bin/env bash
source "$DOROTHY/sources/essentials.sh"
source "$DOROTHY/sources/edit.sh"
source "$DOROTHY/sources/strict.bash"
source "$DOROTHY/sources/globstar.bash"
source "$DOROTHY/sources/nullglob.bash"

cd "$DOROTHY"

echo 'correcting permissions...'
chmod -f +rwx ./**
chmod -f -x ./**/*.md ./sources/*.* ./user/**/*.*
chmod -f +x ./**/commands/*

echo 'stage new files...'
ok silent git add --ignore-errors --force ./**

echo 'stage changed files...'
ok git add -u

echo 'unstage sensitive files...'
# prevent [git add --force ./*.sh] from adding [env.*] if it exists
mkdir -p ./user/env
silent git rm --ignore-unmatch --force --cached -r ./**/env/
silent git rm --ignore-unmatch --force --cached ./**/env.*

echo 'removing junk...'
rm-junk

# edit
edit "$DOROTHY"
git-review "$DOROTHY"
git-review "$DOROTHY/user"
