#!/usr/bin/env bash
source "$HOME/.scripts/sources/strict.bash"

echo -e '\nInstalling commenced...'

# Bare minimum requirements for proceeding further
# install command line tools
ok xcode-select --install

# Mac
setup-mac-brew install
setup-mac-apps
setup-mac-fonts

# Crossplatform
setup-extras install

# Clean
setup-mac-clean

# Restore
echo ''
if confirm "Would you like to restore from backup?"; then
	macos-state restore
fi
echo ''
if confirm "Would you like to configure macOS settings?"; then
	setup-mac-settings
fi
echo ''

echo -e '\nInstallation completed successfully.'
