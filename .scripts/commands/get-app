#!/usr/bin/env bash
set -e

name="$*"
basename="${name%.app}"
path="$HOME/Applications/$name"
if is-dir "$path"; then
	app="$path"
else
	path="/Applications/$name"
	if is-dir "$path"; then
		app="$path"
	fi
fi

if test -n "$app"; then
	echo "$app"
elif test "$basename" == "$name"; then
	get-app "$basename.app"
else
	exit 1
fi