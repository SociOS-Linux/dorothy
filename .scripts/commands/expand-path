#!/usr/bin/env bash
if is-latest-bash; then
	shopt -s nullglob globstar
fi

function echolines {
	for arg in "$@"; do
		echo "$arg"
	done
}

# converts the intuitive
# expand-path '/Applications/Visual *'
# into the correct
# expand-path '/Applications/Visual\\ *'
for arg in "$@"; do
	eval echolines "${arg// /\\ }"
done
