#!/usr/bin/env bash
set -e
if is-latest-bash; then
	shopt -s nullglob globstar
fi

cd "$HOME/.scripts"

chmod +rwx ./**
chmod 644 ./**/*.md ./**/sources/*.* ./**/users/**/*.*
chmod +x ./**/commands/*

rm-junk

git add -f ./**
git add -u

# prevent [git add -f ./*.sh] from adding [env.sh] if it exists
ok silent git rm -f -r --cached ./**/env/**
ok silent git rm -f --cached ./**/env.sh
