#!/usr/bin/env bash
source "$HOME/.scripts/sources/essentials.sh"
source "$HOME/.scripts/sources/strict.bash"

# Helper
function pipinstall {
	for ARG in "$@"; do
		echo pip install --user --upgrade "$ARG"
		pip install --user --upgrade "$ARG"
	done
}

if is-present "${PYTHON_INSTALL:-}"; then
	echo -e '\nInstalling pip packages'
	pipinstall "${PYTHON_INSTALL[@]}"
fi